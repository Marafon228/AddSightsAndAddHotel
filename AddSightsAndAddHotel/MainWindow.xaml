<Window x:Class="AddSightsAndAddHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddSightsAndAddHotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#FFB841"  >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="378*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Hotel" Click="Button_Click" Margin="0 0 10 0"></Button>
            <Button Content="Sights" Click="Button_Click_1" Margin="10 0 0 0"></Button>
        </StackPanel>
    </Grid>
</Window>
